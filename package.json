{
  "name": "flagit-react-sdk",
  "version": "2.0.2",
  "description": "Lightweight React SDK for feature flags with server-side evaluation and synchronous access - no Provider needed",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "QUICKSTART.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "feature-flags",
    "feature-toggles",
    "react",
    "react-hooks",
    "typescript",
    "flagit",
    "sdk",
    "feature-management",
    "experimentation",
    "ab-testing",
    "canary-release",
    "progressive-rollout"
  ],
  "author": {
    "name": "Flagit Team",
    "email": "support@flagit.com",
    "url": "https://flagit.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/viswasekaran/flagit-react-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/viswasekaran/flagit-react-sdk/issues"
  },
  "homepage": "https://github.com/viswasekaran/flagit-react-sdk#readme",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "type-check": "tsc --noEmit",
    "verify": "node scripts/verify-publish.js",
    "prepare-publish": "npm run verify && npm pack"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.83.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
